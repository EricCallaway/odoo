<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Action for the patient menu-->
    <record id="action_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create First Patient
                </p>
            </field>
        </record>

    <menuitem id="hospital_root" name="Hospital" sequence="0" web_icon="eric_hospital/static/description/icon.png"/>
    <menuitem id="hospital_patient" name="Patient" parent="hospital_root" action="action_patient"/>
</odoo>